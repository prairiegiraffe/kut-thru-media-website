---
const navLinks = [
  { href: '/who-we-are', label: 'Who We Are', number: '01' },
  { href: '/who-we-work-with', label: 'Who We Work With', number: '02' },
  { href: '/what-we-do', label: 'What We Do', number: '03' },
  { href: '/process', label: 'Process', number: '04' },
  { href: '/work', label: 'Work', number: '05' },
  { href: '/podcast', label: 'Podcast', number: '06' },
];

const socialLinks = [
  { href: 'https://linkedin.com/company/kutthru', label: 'Li' },
  { href: 'https://facebook.com/kutthru', label: 'Fb' },
  { href: 'https://instagram.com/kutthru', label: 'Ig' },
  { href: 'https://youtube.com/@kutthru', label: 'Yt' },
  { href: 'https://tiktok.com/@kutthru', label: 'Tk' },
];

const currentPath = Astro.url.pathname;
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="header-bg absolute inset-0 bg-charcoal/0 backdrop-blur-none border-b border-transparent transition-all duration-500"></div>

  <div class="container relative">
    <nav class="flex items-center justify-between h-24">
      <!-- Logo -->
      <a href="/" class="logo-link relative z-[60] group" data-cursor>
        <span class="text-2xl font-black tracking-tighter">
          <span class="inline-block transition-transform duration-300 group-hover:-translate-y-1">K</span><span class="inline-block transition-transform duration-300 group-hover:-translate-y-1 delay-[25ms]">U</span><span class="inline-block transition-transform duration-300 group-hover:-translate-y-1 delay-[50ms]">T</span><span class="text-power-red mx-1 inline-block transition-transform duration-300 group-hover:scale-110">|</span><span class="inline-block transition-transform duration-300 group-hover:-translate-y-1 delay-[75ms]">T</span><span class="inline-block transition-transform duration-300 group-hover:-translate-y-1 delay-[100ms]">H</span><span class="inline-block transition-transform duration-300 group-hover:-translate-y-1 delay-[125ms]">R</span><span class="inline-block transition-transform duration-300 group-hover:-translate-y-1 delay-[150ms]">Ū</span>
        </span>
      </a>

      <!-- Right Side: CTA + Menu Button -->
      <div class="flex items-center gap-4 lg:gap-6 relative z-[60]">
        <!-- CTA Button -->
        <a href="/contact" class="btn btn-primary text-sm py-3 px-6 lg:px-8 hidden sm:inline-flex">
          <span>Let's Talk</span>
        </a>

        <!-- Menu Button -->
        <button
          id="menu-button"
          class="menu-button relative w-12 h-12 lg:w-14 lg:h-14 flex items-center justify-center group"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <div class="absolute inset-0 rounded-full border border-white/20 group-hover:border-power-red transition-colors duration-300"></div>
          <div class="menu-btn-fill absolute inset-0 rounded-full bg-power-red scale-0 transition-transform duration-500 ease-out"></div>
          <div class="menu-icon relative w-5 h-3 z-10">
            <span class="menu-line absolute left-0 top-0 w-full h-0.5 bg-impact-white transition-all duration-400"></span>
            <span class="menu-line absolute left-0 bottom-0 w-full h-0.5 bg-impact-white transition-all duration-400"></span>
          </div>
        </button>
      </div>
    </nav>
  </div>
</header>

<!-- Mega Menu - Separate from header for proper z-indexing -->
<div id="mega-menu" class="mega-menu fixed inset-0 z-[100] invisible">
  <!-- Solid Background -->
  <div class="mega-bg absolute inset-0 bg-steel-black opacity-0 transition-opacity duration-500"></div>

  <!-- Animated reveal curtain -->
  <div class="mega-curtain absolute inset-0 bg-power-red origin-top scale-y-0"></div>

  <!-- Content Container -->
  <div class="mega-content relative z-10 h-full flex flex-col opacity-0">
    <!-- Header area with close button -->
    <div class="container flex items-center justify-between h-24 flex-shrink-0">
      <a href="/" class="text-2xl font-black tracking-tighter">
        KUT<span class="text-power-red mx-1">|</span>THRŪ
      </a>
      <button
        id="menu-close"
        class="w-12 h-12 lg:w-14 lg:h-14 flex items-center justify-center rounded-full border border-white/20 hover:border-power-red hover:bg-power-red transition-all duration-300 group"
        aria-label="Close menu"
      >
        <svg class="w-5 h-5 text-impact-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Main Content Grid -->
    <div class="flex-1 container flex flex-col lg:flex-row gap-8 lg:gap-16 py-8 lg:py-12 overflow-auto">
      <!-- Navigation Links -->
      <nav class="flex-1 flex flex-col justify-center">
        {navLinks.map((link, index) => (
          <a
            href={link.href}
            class:list={[
              'mega-link group flex items-center gap-4 py-3 lg:py-4 border-b border-white/5 first:border-t',
              currentPath === link.href ? 'is-active' : ''
            ]}
            style={`--index: ${index}`}
          >
            <span class="text-xs font-mono text-power-red/60 group-hover:text-power-red transition-colors w-6">{link.number}</span>
            <span class="nav-text text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold uppercase tracking-tight text-impact-white group-hover:text-power-red transition-colors duration-300">
              {link.label}
            </span>
            <svg class="w-5 h-5 lg:w-6 lg:h-6 ml-auto text-power-red opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        ))}

        <!-- Mobile CTA -->
        <div class="mt-8 sm:hidden">
          <a href="/contact" class="btn btn-primary w-full justify-center py-4">
            <span>Let's Talk</span>
          </a>
        </div>
      </nav>

      <!-- Side Info (Desktop) -->
      <div class="hidden lg:flex flex-col w-72 xl:w-80 pl-16 border-l border-white/10">
        <!-- Tagline -->
        <div class="mega-side-item mb-12">
          <p class="text-xl xl:text-2xl font-bold leading-snug">
            Clean Marketing<br />
            <span class="text-text-muted">for Dirty Jobs.</span>
          </p>
        </div>

        <!-- Contact -->
        <div class="space-y-6 mega-side-item mb-12">
          <div>
            <span class="block text-xs font-bold uppercase tracking-widest text-text-subtle mb-2">Email</span>
            <a href="mailto:info@kutthru.com" class="text-lg hover:text-power-red transition-colors">
              info@kutthru.com
            </a>
          </div>
          <div>
            <span class="block text-xs font-bold uppercase tracking-widest text-text-subtle mb-2">Phone</span>
            <a href="tel:307-228-0352" class="text-lg hover:text-power-red transition-colors">
              307-228-0352
            </a>
          </div>
        </div>

        <!-- Social -->
        <div class="mega-side-item">
          <span class="block text-xs font-bold uppercase tracking-widest text-text-subtle mb-4">Follow</span>
          <div class="flex gap-4">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm font-bold text-text-muted hover:text-power-red transition-colors"
              >
                {social.label}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="container py-6 border-t border-white/5 flex-shrink-0">
      <div class="flex items-center justify-between text-sm text-text-subtle">
        <span>&copy; {new Date().getFullYear()} KUT | THRŪ Media</span>
        <span class="hidden sm:block">Gillette, Wyoming</span>
      </div>
    </div>
  </div>
</div>

<style>
  /* Menu button states */
  .menu-button:hover .menu-btn-fill {
    transform: scale(1);
  }

  .menu-button.open .menu-line:nth-child(1) {
    transform: translateY(5px) rotate(45deg);
  }

  .menu-button.open .menu-line:nth-child(2) {
    transform: translateY(-5px) rotate(-45deg);
  }

  /* Mega menu visibility */
  .mega-menu.open {
    visibility: visible;
  }

  .mega-menu.open .mega-bg {
    opacity: 1;
  }

  .mega-menu.open .mega-curtain {
    animation: curtainReveal 0.6s cubic-bezier(0.77, 0, 0.175, 1) forwards;
  }

  .mega-menu.open .mega-content {
    opacity: 1;
    transition: opacity 0.4s ease 0.3s;
  }

  /* Curtain animation */
  @keyframes curtainReveal {
    0% {
      transform: scaleY(0);
      transform-origin: top;
    }
    50% {
      transform: scaleY(1);
      transform-origin: top;
    }
    50.1% {
      transform-origin: bottom;
    }
    100% {
      transform: scaleY(0);
      transform-origin: bottom;
    }
  }

  /* Nav link animations */
  .mega-link {
    opacity: 0;
    transform: translateY(20px);
  }

  .mega-menu.open .mega-link {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.5s ease, transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    transition-delay: calc(0.35s + var(--index) * 0.06s);
  }

  /* Active state */
  .mega-link.is-active .nav-text {
    color: var(--color-power-red);
  }

  /* Side items */
  .mega-side-item {
    opacity: 0;
    transform: translateX(20px);
  }

  .mega-menu.open .mega-side-item {
    opacity: 1;
    transform: translateX(0);
    transition: opacity 0.5s ease 0.5s, transform 0.5s ease 0.5s;
  }

  /* Close animation */
  .mega-menu.closing .mega-bg {
    opacity: 0;
    transition: opacity 0.4s ease 0.2s;
  }

  .mega-menu.closing .mega-content {
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .mega-menu.closing .mega-link,
  .mega-menu.closing .mega-side-item {
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  /* Header scroll state */
  #header.scrolled .header-bg {
    background-color: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(12px);
    border-color: rgba(255, 255, 255, 0.05);
  }

  #header.scrolled nav {
    height: 5rem;
  }

  /* Hide header when menu open */
  #header.menu-open {
    pointer-events: none;
  }

  #header.menu-open .header-bg {
    opacity: 0;
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const header = document.getElementById('header');
  const menuButton = document.getElementById('menu-button');
  const menuClose = document.getElementById('menu-close');
  const megaMenu = document.getElementById('mega-menu');

  let menuOpen = false;

  // Simple scroll behavior - just add background when scrolled, no hiding
  let lastScrollY = 0;

  const handleScroll = () => {
    const currentScrollY = window.scrollY;

    if (currentScrollY > 100) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }

    lastScrollY = currentScrollY;
  };

  // Use passive listener for better mobile performance
  window.addEventListener('scroll', handleScroll, { passive: true });

  function openMenu() {
    menuOpen = true;
    megaMenu?.classList.remove('closing');
    megaMenu?.classList.add('open');
    menuButton?.classList.add('open');
    header?.classList.add('menu-open');
    document.body.style.overflow = 'hidden';

    if ((window as any).lenis) {
      (window as any).lenis.stop();
    }
  }

  function closeMenu() {
    menuOpen = false;
    megaMenu?.classList.add('closing');
    menuButton?.classList.remove('open');

    setTimeout(() => {
      megaMenu?.classList.remove('open', 'closing');
      header?.classList.remove('menu-open');
      document.body.style.overflow = '';

      if ((window as any).lenis) {
        (window as any).lenis.start();
      }
    }, 400);
  }

  // Event listeners
  menuButton?.addEventListener('click', () => {
    if (menuOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  menuClose?.addEventListener('click', closeMenu);

  // Close on link click
  document.querySelectorAll('.mega-link, .mega-menu .btn').forEach((link) => {
    link.addEventListener('click', closeMenu);
  });

  // Close on escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && menuOpen) {
      closeMenu();
    }
  });

  // Magnetic effect on buttons
  [menuButton, menuClose].forEach((btn) => {
    if (!btn) return;

    btn.addEventListener('mousemove', (e: MouseEvent) => {
      const rect = btn.getBoundingClientRect();
      const x = e.clientX - rect.left - rect.width / 2;
      const y = e.clientY - rect.top - rect.height / 2;

      gsap.to(btn, {
        x: x * 0.25,
        y: y * 0.25,
        duration: 0.3,
        ease: 'power2.out',
      });
    });

    btn.addEventListener('mouseleave', () => {
      gsap.to(btn, {
        x: 0,
        y: 0,
        duration: 0.5,
        ease: 'elastic.out(1, 0.4)',
      });
    });
  });

  // Hover effect on nav links
  document.querySelectorAll('.mega-link').forEach((link) => {
    link.addEventListener('mouseenter', () => {
      gsap.to(link, { x: 10, duration: 0.3, ease: 'power2.out' });
    });
    link.addEventListener('mouseleave', () => {
      gsap.to(link, { x: 0, duration: 0.3, ease: 'power2.out' });
    });
  });
</script>
