---
import MarqueeText from './effects/MarqueeText.astro';
import MagneticButton from './effects/MagneticButton.astro';

const navLinks = [
  { href: '/who-we-are', label: 'Who We Are' },
  { href: '/who-we-work-with', label: 'Who We Work With' },
  { href: '/what-we-do', label: 'What We Do' },
  { href: '/process', label: 'Our Process' },
  { href: '/work', label: 'Our Work' },
  { href: '/podcast', label: 'Podcast' },
  { href: '/contact', label: 'Contact' },
];

const socialLinks = [
  { href: 'https://linkedin.com/company/kutthru', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://facebook.com/kutthru', label: 'Facebook', icon: 'facebook' },
  { href: 'https://instagram.com/kutthru', label: 'Instagram', icon: 'instagram' },
  { href: 'https://youtube.com/@kutthru', label: 'YouTube', icon: 'youtube' },
  { href: 'https://tiktok.com/@kutthru', label: 'TikTok', icon: 'tiktok' },
];
---

<footer class="bg-steel-black relative overflow-hidden">
  <!-- Large Background Text -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none select-none overflow-hidden">
    <span class="text-[20vw] font-black text-white/[0.02] whitespace-nowrap">
      KUT|THR的
    </span>
  </div>

  <!-- Main Footer Content -->
  <div class="container relative z-10 py-24 lg:py-32">
    <!-- Top Section - Big CTA -->
    <div class="mb-24 lg:mb-32" data-animate="fade-up">
      <p class="eyebrow mb-8">Ready to start?</p>
      <h2 class="headline-xl max-w-4xl mb-12">
        Let's Build Something<br />
        <span class="text-stroke">Worth Talking About.</span>
      </h2>
      <MagneticButton href="/contact" variant="primary" size="lg">
        <span>Get in Touch</span>
      </MagneticButton>
    </div>

    <!-- Middle Section - Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 pb-24 border-b border-white/10">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-8 group">
          <img
            src="/assets/images/Logos/Full Logo White.png"
            alt="KUT | THR的 Media"
            class="h-12 lg:h-14 w-auto transition-transform duration-300 group-hover:scale-105"
          />
        </a>
        <p class="text-2xl font-semibold text-impact-white mb-4">
          Clean Marketing for Dirty Jobs.
        </p>
        <p class="text-text-muted mb-8 max-w-md">
          Marketing agency for Oil & Gas, Construction, Mining, and Heavy Industrial companies.
        </p>

        <!-- Social Links -->
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link w-12 h-12 flex items-center justify-center border border-white/10 text-text-muted hover:border-power-red hover:text-power-red transition-all duration-300"
              aria-label={social.label}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              )}
              {social.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
              {social.icon === 'tiktok' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation Column -->
      <div>
        <h4 class="text-xs font-bold text-text-subtle uppercase tracking-widest mb-8">Navigation</h4>
        <ul class="space-y-4">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="link-hover text-lg text-text-muted hover:text-impact-white transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h4 class="text-xs font-bold text-text-subtle uppercase tracking-widest mb-8">Contact</h4>
        <ul class="space-y-6">
          <li>
            <span class="block text-xs text-text-subtle uppercase tracking-wider mb-1">Email</span>
            <a
              href="mailto:info@kutthru.com"
              class="text-lg text-text-muted hover:text-power-red transition-colors duration-300"
            >
              info@kutthru.com
            </a>
          </li>
          <li>
            <span class="block text-xs text-text-subtle uppercase tracking-wider mb-1">Phone</span>
            <a
              href="tel:307-228-0352"
              class="text-lg text-text-muted hover:text-power-red transition-colors duration-300"
            >
              307-228-0352
            </a>
          </li>
          <li>
            <span class="block text-xs text-text-subtle uppercase tracking-wider mb-1">Location</span>
            <address class="text-text-muted not-italic">
              1701 Phillips Cir. STE 110<br />
              Gillette, WY 82718
            </address>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-text-subtle text-sm">
        &copy; {new Date().getFullYear()} KUT | THR的 Media. All rights reserved.
      </p>
      <p class="text-text-subtle text-sm">
        Designed & Built with <span class="text-power-red">grit</span> in Wyoming.
      </p>
    </div>
  </div>

  <!-- Marquee at bottom -->
  <div class="border-t border-white/5 py-4 overflow-hidden">
    <MarqueeText
      text="KUT | THR的 MEDIA"
      speed={20}
      direction="right"
      class="text-6xl font-black text-white/[0.03]"
    />
  </div>
</footer>

<style>
  .social-link:hover {
    transform: translateY(-4px);
  }
</style>
