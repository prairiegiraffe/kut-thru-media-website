---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';
import SectionHeadline from '../components/ui/SectionHeadline.astro';

const services = [
  {
    title: 'Marketing Strategy',
    tagline: '"Diagnose before you prescribe."',
    description: 'Before we touch a camera or design a logo, we dig deep into your business. Who are your customers? How do they find you? What\'s working and what\'s not? We map your entire customer journey—from prospect to lead to customer to referral source—and build a strategy that actually makes sense for your business.',
    includes: [
      'Target demographic analysis',
      'Messaging development',
      'Marketing channel selection',
      'Lead capture & nurture strategy',
      'Conversion optimization',
      'Client retention planning',
      'Referral system design',
    ],
    icon: 'strategy',
  },
  {
    title: 'Logo / Branding',
    tagline: '"Your logo shouldn\'t look like it was made in 1995."',
    description: 'We take outdated, forgettable brands and transform them into modern, memorable identities that command respect. Logo design, color systems, typography, brand guidelines—the whole package.',
    includes: [
      'Logo redesign',
      'Brand identity system',
      'Color palette & typography',
      'Brand guidelines document',
      'Collateral templates',
    ],
    icon: 'rebrand',
  },
  {
    title: 'Website Design & Development',
    tagline: '"If social media is your first impression, your website is your home base."',
    description: 'Your website is your storefront. We build fast, professional sites that look great, work on any device, and actually help you win business.',
    includes: [
      'Custom website design',
      'Mobile-responsive development',
      'Performance optimization',
      'SEO-friendly structure',
      'Ongoing hosting & support',
    ],
    icon: 'website',
  },
  {
    title: 'Professional Photography',
    tagline: '"Stock photos don\'t kut it."',
    description: 'We go on-site, get dirty, and capture the real work. Portraits of your team, action shots on the job, equipment, facilities—imagery that shows who you really are.',
    includes: [
      'On-location photography',
      'Team & leadership portraits',
      'Equipment & facility shots',
      'Action photography',
      'Post-production editing',
    ],
    icon: 'camera',
  },
  {
    title: 'Professional Videography',
    tagline: '"Show, don\'t tell."',
    description: 'Video is king. We create company "hero" videos, recruitment content, testimonials, and social media clips that capture attention and tell your story.',
    includes: [
      'Company brand videos',
      'Drone & aerial footage',
      'Recruitment videos',
      'Testimonial production',
      'Social media content',
    ],
    icon: 'video',
  },
  {
    title: 'Social Media',
    tagline: '"Content is king, but consistency is the Queen—and she rules the kingdom."',
    description: 'This is where we really shine. We don\'t just post—we create content with purpose, manage your channels, engage your audience, and track everything.',
    includes: [
      'Content creation',
      'Strategy & content calendars',
      'Management & distribution',
      'Commenting & DM engagement',
      'Analytic tracking & reporting',
    ],
    icon: 'social',
  },
];
---

<Layout
  title="Services | KUT | THRŪ Media"
  description="Marketing strategy, branding, websites, photography, videography, and social media management for blue collar businesses. Built around you, powered by us."
>
  <Header />

  <main class="flex-1 pt-20">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-b from-gray-900 to-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="headline-xl mb-6">What We Do</h1>
          <p class="body-lg text-muted">
            Built around you. Powered by us.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Overview -->
    <section class="section-sm bg-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h2 class="headline-md mb-6">Full Service Marketing for Blue Collar Businesses</h2>
          <p class="body-md text-muted">
            Every engagement starts with understanding your business, your goals, and your market. Then we build a custom strategy and execute it with precision.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Detail -->
    <section class="bg-gray-900">
      {services.map((service, index) => (
        <div class={`section ${index % 2 === 0 ? 'bg-gray-900' : 'bg-charcoal'}`}>
          <div class="container">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
              <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
                <div class="w-16 h-16 bg-power-red/20 rounded-lg flex items-center justify-center mb-6">
                  <svg class="w-8 h-8 text-power-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {service.icon === 'strategy' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    )}
                    {service.icon === 'rebrand' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                    )}
                    {service.icon === 'website' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    )}
                    {service.icon === 'camera' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                    )}
                    {service.icon === 'video' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    )}
                    {service.icon === 'social' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                    )}
                  </svg>
                </div>
                <h2 class="headline-md mb-2">{service.title}</h2>
                <p class="text-power-red font-semibold italic mb-6">{service.tagline}</p>
                <p class="body-md text-muted mb-8">{service.description}</p>
              </div>
              <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
                <div class="card">
                  <h3 class="text-lg font-bold mb-6">What's Included:</h3>
                  <ul class="space-y-3">
                    {service.includes.map((item) => (
                      <li class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-power-red flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-muted">{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </section>

    <!-- CTA Section -->
    <section class="section bg-power-red">
      <div class="container text-center">
        <h2 class="headline-lg mb-6 text-impact-white">Ready to Get Started?</h2>
        <p class="body-lg text-impact-white/90 mb-10 max-w-2xl mx-auto">
          Every engagement starts with a Marketing Workshop. Let's diagnose before we prescribe.
        </p>
        <Button href="/contact" variant="secondary" size="lg">
          Schedule Your Workshop
        </Button>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
