---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';
import SectionHeadline from '../components/ui/SectionHeadline.astro';

const steps = [
  {
    number: '01',
    title: 'Marketing Workshop',
    description: 'We sit down with your team and dig into everything—your customers, your competition, your goals, your challenges. This is where we learn your business inside and out.',
  },
  {
    number: '02',
    title: 'Marketing Blueprint',
    description: 'Based on the workshop, we deliver a comprehensive Marketing Blueprint. This is your roadmap—target demographics, messaging, channels, and a clear strategy to move forward.',
  },
  {
    number: '03',
    title: 'Pricing Options',
    description: 'We present pricing options based on the Blueprint\'s recommendations. You choose what fits your budget and goals. No surprises.',
  },
  {
    number: '04',
    title: 'Agreement & Payment',
    description: 'Sign the agreement, process payment, and we\'re officially partners. Time to get to work.',
  },
  {
    number: '05',
    title: 'Execution',
    description: 'We build, we shoot, we create, we launch. Regular check-ins keep you in the loop. We don\'t disappear—we communicate.',
  },
];

const funnelStages = [
  {
    title: 'Prospect Stage',
    color: 'power-red',
    items: ['Target Demographic', 'Messaging', 'Marketing Channels'],
  },
  {
    title: 'Lead Stage',
    color: 'power-red',
    items: ['Lead Capture', 'Lead Nurture', 'Lead Conversion'],
  },
  {
    title: 'Customer Stage',
    color: 'power-red',
    items: ['New Client Experience', 'Client Retention', 'Referrals'],
  },
];
---

<Layout
  title="Our Process | KUT | THRŪ Media"
  description="We diagnose before we prescribe. Learn how our Marketing Workshop and Blueprint process delivers real results for your business."
>
  <Header />

  <main class="flex-1 pt-20">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-b from-gray-900 to-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="headline-xl mb-6">Our Process</h1>
          <p class="body-lg text-muted">
            Diagnose before you prescribe.
          </p>
        </div>
      </div>
    </section>

    <!-- Process Overview -->
    <section class="section-sm bg-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h2 class="headline-md mb-6">How We Work</h2>
          <p class="body-md text-muted">
            We don't throw tactics at the wall and hope something sticks. We start by understanding your business, then build a custom strategy, then execute with precision.
          </p>
        </div>
      </div>
    </section>

    <!-- Process Steps -->
    <section class="section bg-gray-900">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          {steps.map((step, index) => (
            <div class={`flex gap-8 ${index !== steps.length - 1 ? 'mb-12 pb-12 border-b border-white/10' : ''}`}>
              <div class="flex-shrink-0">
                <div class="w-20 h-20 bg-power-red flex items-center justify-center">
                  <span class="text-3xl font-black text-impact-white">{step.number}</span>
                </div>
              </div>
              <div class="pt-2">
                <h3 class="text-2xl font-bold mb-4">{step.title}</h3>
                <p class="body-md text-muted">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Marketing Funnel Section -->
    <section class="section bg-charcoal">
      <div class="container">
        <SectionHeadline
          title="The Full Picture"
          subtitle="We think about your entire customer journey—not just one piece of it."
          align="center"
        />

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {funnelStages.map((stage, index) => (
            <div class="text-center">
              <div class="relative mb-8">
                <!-- Arrow indicator for flow -->
                {index < funnelStages.length - 1 && (
                  <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2">
                    <svg class="w-8 h-8 text-power-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </div>
                )}
                <div class="w-16 h-16 mx-auto bg-power-red/20 rounded-full flex items-center justify-center mb-4">
                  <span class="text-2xl font-black text-power-red">{index + 1}</span>
                </div>
                <h3 class="text-xl font-bold mb-6">{stage.title}</h3>
              </div>
              <ul class="space-y-3">
                {stage.items.map((item) => (
                  <li class="flex items-center justify-center gap-2">
                    <svg class="w-4 h-4 text-power-red" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-muted">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-power-red">
      <div class="container text-center">
        <h2 class="headline-lg mb-6 text-impact-white">Let's Start With a Conversation</h2>
        <p class="body-lg text-impact-white/90 mb-10">
          The first step is simple—let's talk.
        </p>
        <Button href="/contact" variant="secondary" size="lg">
          Schedule a Call
        </Button>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
