---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';
import SectionHeadline from '../components/ui/SectionHeadline.astro';

const steps = [
  {
    number: '01',
    title: 'Align',
    description: 'We sit down with your team and dig into everything—your customers, your competition, your goals, your challenges.',
    bullets: ['Marketing Workshop', 'Marketing Blueprint', 'Logo / Rebrand / Branding'],
  },
  {
    number: '02',
    title: 'Capture',
    description: 'We go on-site, get in the field, and capture the real work. This is where we shoot the content that tells your story.',
    bullets: ['Professional Photography', 'Video Production', 'Social Media Content Capture'],
  },
  {
    number: '03',
    title: 'Build',
    description: 'With the content captured, we get to work building out your brand presence across all platforms.',
    bullets: ['Editing & Post-Production', 'Social Platform Builds', 'Website Development'],
  },
  {
    number: '04',
    title: 'Approve',
    description: 'Your eyes get on everything before it goes out to the public. We don\'t launch without your sign-off.',
    bullets: ['Client Review', 'Revisions & Refinements', 'Final Sign-Off'],
  },
  {
    number: '05',
    title: 'Deploy',
    description: 'Set the launch date and push everything live. Websites, social media channels, billboards—all of it.',
    bullets: ['Set Launch Date', 'Channel Launches', 'Go Live'],
  },
  {
    number: '06',
    title: 'Optimize',
    description: 'Track what\'s working and what\'s not. Analytics, engagement, commenting—we keep improving.',
    bullets: ['Analytics Tracking', 'Engagement Monitoring', 'Continuous Improvement'],
  },
];

const funnelStages = [
  {
    title: 'Prospect Stage',
    color: 'power-red',
    items: ['Target Demographic', 'Messaging', 'Marketing Channels'],
  },
  {
    title: 'Lead Stage',
    color: 'power-red',
    items: ['Lead Capture', 'Lead Nurture', 'Lead Conversion'],
  },
  {
    title: 'Customer Stage',
    color: 'power-red',
    items: ['New Client Experience', 'Client Retention', 'Referrals'],
  },
];
---

<Layout
  title="Our Proven Process | KUT | THRŪ Media"
  description="We diagnose before we prescribe. Learn how our Marketing Workshop and Blueprint process delivers real results for your business."
>
  <Header />

  <main class="flex-1 pt-20">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-b from-gray-900 to-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="headline-xl mb-6">Our Proven Process</h1>
          <p class="body-lg text-muted">
            Diagnose before you prescribe.
          </p>
        </div>
      </div>
    </section>

    <!-- Process Overview -->
    <section class="section-sm bg-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h2 class="headline-md mb-6">How We Work</h2>
          <p class="body-md text-muted">
            We don't throw tactics at the wall and hope something sticks. We start by understanding your business, then build a custom strategy, then execute with precision.
          </p>
        </div>
      </div>
    </section>

    <!-- Process Steps -->
    <section class="section bg-gray-900">
      <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {steps.map((step, index) => (
            <div class="bg-charcoal border border-white/10 p-8 relative">
              <!-- Step Number -->
              <div class="absolute -top-4 -left-4 w-12 h-12 bg-power-red flex items-center justify-center">
                <span class="text-xl font-black text-impact-white">{step.number}</span>
              </div>
              <!-- Arrow to next step -->
              {index < steps.length - 1 && index !== 2 && (
                <div class="hidden lg:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-10">
                  <svg class="w-8 h-8 text-power-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              )}
              <div class="pt-4">
                <h3 class="text-2xl font-bold mb-4">{step.title}</h3>
                <p class="body-md text-muted mb-6">{step.description}</p>
                <ul class="space-y-2">
                  {step.bullets.map((bullet) => (
                    <li class="flex items-center gap-2">
                      <svg class="w-4 h-4 text-power-red flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-sm text-muted">{bullet}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Marketing Funnel Section -->
    <section class="section bg-charcoal">
      <div class="container">
        <SectionHeadline
          title="The Full Picture"
          subtitle="We think about your entire customer journey—not just one piece of it."
          align="center"
        />

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {funnelStages.map((stage, index) => (
            <div class="text-center">
              <div class="relative mb-8">
                <!-- Arrow indicator for flow -->
                {index < funnelStages.length - 1 && (
                  <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2">
                    <svg class="w-8 h-8 text-power-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </div>
                )}
                <div class="w-16 h-16 mx-auto bg-power-red/20 rounded-full flex items-center justify-center mb-4">
                  <span class="text-2xl font-black text-power-red">{index + 1}</span>
                </div>
                <h3 class="text-xl font-bold mb-6">{stage.title}</h3>
              </div>
              <ul class="space-y-3">
                {stage.items.map((item) => (
                  <li class="flex items-center justify-center gap-2">
                    <svg class="w-4 h-4 text-power-red" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-muted">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-power-red">
      <div class="container text-center">
        <h2 class="headline-lg mb-6 text-impact-white">Let's Start With a Conversation</h2>
        <p class="body-lg text-impact-white/90 mb-10">
          The first step is simple—let's talk.
        </p>
        <Button href="/contact" variant="secondary" size="lg">
          Schedule a Call
        </Button>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
