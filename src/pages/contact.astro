---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';

const helpOptions = [
  { value: '', label: 'Select one...' },
  { value: 'marketing-strategy', label: 'Marketing Strategy' },
  { value: 'rebrand', label: 'Rebrand' },
  { value: 'website', label: 'Website' },
  { value: 'photography', label: 'Photography' },
  { value: 'video', label: 'Video' },
  { value: 'social-media', label: 'Social Media' },
  { value: 'not-sure', label: 'Not Sure Yet' },
];

const socialLinks = [
  { href: 'https://linkedin.com/company/kutthru', label: 'LinkedIn' },
  { href: 'https://facebook.com/kutthru', label: 'Facebook' },
  { href: 'https://instagram.com/kutthru', label: 'Instagram' },
  { href: 'https://youtube.com/@kutthru', label: 'YouTube' },
  { href: 'https://tiktok.com/@kutthru', label: 'TikTok' },
];
---

<Layout
  title="Contact Us | KUT | THRŪ Media"
  description="Ready to KUT | THRŪ the noise? Let's talk about what we can build for your business. Call 307-228-0352 or reach out today."
>
  <Header />

  <main class="flex-1 pt-20">
    <!-- Hero Section -->
    <section class="section bg-gradient-to-b from-gray-900 to-charcoal">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="headline-xl mb-6">Let's Talk</h1>
          <p class="body-lg text-muted">
            Ready to KUT | THRŪ the noise? We're ready when you are.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Content -->
    <section class="section bg-charcoal">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div>
            <h2 class="headline-md mb-8">Send Us a Message</h2>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-semibold mb-2">
                    Name <span class="text-power-red">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-gray-900 border border-white/20 text-impact-white placeholder-text-subtle focus:border-power-red focus:outline-none transition-colors"
                  />
                </div>
                <div>
                  <label for="company" class="block text-sm font-semibold mb-2">
                    Company <span class="text-power-red">*</span>
                  </label>
                  <input
                    type="text"
                    id="company"
                    name="company"
                    required
                    class="w-full px-4 py-3 bg-gray-900 border border-white/20 text-impact-white placeholder-text-subtle focus:border-power-red focus:outline-none transition-colors"
                  />
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-semibold mb-2">
                    Email <span class="text-power-red">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-gray-900 border border-white/20 text-impact-white placeholder-text-subtle focus:border-power-red focus:outline-none transition-colors"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-semibold mb-2">
                    Phone
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-3 bg-gray-900 border border-white/20 text-impact-white placeholder-text-subtle focus:border-power-red focus:outline-none transition-colors"
                  />
                </div>
              </div>

              <div>
                <label for="help" class="block text-sm font-semibold mb-2">
                  How can we help?
                </label>
                <select
                  id="help"
                  name="help"
                  class="w-full px-4 py-3 bg-gray-900 border border-white/20 text-impact-white focus:border-power-red focus:outline-none transition-colors"
                >
                  {helpOptions.map((option) => (
                    <option value={option.value}>{option.label}</option>
                  ))}
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-semibold mb-2">
                  Tell us about your business
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="w-full px-4 py-3 bg-gray-900 border border-white/20 text-impact-white placeholder-text-subtle focus:border-power-red focus:outline-none transition-colors resize-none"
                  placeholder="What does your company do? What are your goals? What challenges are you facing?"
                ></textarea>
              </div>

              <Button type="submit" variant="primary" size="lg">
                Send Message
              </Button>
            </form>
          </div>

          <!-- Contact Info -->
          <div>
            <h2 class="headline-md mb-8">Contact Info</h2>

            <div class="space-y-8 mb-12">
              <div>
                <h3 class="text-sm font-bold text-text-subtle uppercase tracking-wider mb-2">Email</h3>
                <a href="mailto:info@kutthru.com" class="text-xl font-semibold hover:text-power-red transition-colors">
                  info@kutthru.com
                </a>
              </div>

              <div>
                <h3 class="text-sm font-bold text-text-subtle uppercase tracking-wider mb-2">Phone</h3>
                <a href="tel:307-228-0352" class="text-xl font-semibold hover:text-power-red transition-colors">
                  307-228-0352
                </a>
              </div>

              <div>
                <h3 class="text-sm font-bold text-text-subtle uppercase tracking-wider mb-2">Address</h3>
                <address class="text-lg not-italic text-muted">
                  1701 Phillips Cir. STE 110<br />
                  Gillette, WY 82718
                </address>
              </div>

              <div>
                <h3 class="text-sm font-bold text-text-subtle uppercase tracking-wider mb-2">Website</h3>
                <a href="https://kutthru.com" class="text-lg font-semibold hover:text-power-red transition-colors">
                  KutThru.com
                </a>
              </div>
            </div>

            <!-- Social Links -->
            <div>
              <h3 class="text-sm font-bold text-text-subtle uppercase tracking-wider mb-4">Follow Us</h3>
              <div class="flex flex-wrap gap-3">
                {socialLinks.map((link) => (
                  <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="px-4 py-2 bg-gray-800 border border-white/10 text-sm font-semibold hover:bg-power-red hover:border-power-red transition-all"
                  >
                    {link.label}
                  </a>
                ))}
              </div>
            </div>

            <!-- Alternative CTA -->
            <div class="mt-12 p-8 bg-gray-900 border border-white/10">
              <h3 class="text-xl font-bold mb-4">Prefer to Talk?</h3>
              <p class="text-muted mb-6">
                Skip the form. Schedule a call directly.
              </p>
              <Button href="#" variant="secondary">
                Schedule a Call
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section (Placeholder) -->
    <section class="bg-gray-900">
      <div class="aspect-[3/1] bg-gray-800 flex items-center justify-center border-t border-white/10">
        <span class="text-text-subtle">Map placeholder - Gillette, WY</span>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
